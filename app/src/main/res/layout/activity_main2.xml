<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <FrameLayout
        android:id="@+id/homeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigation" />

    <nl.joery.animatedbottombar.AnimatedBottomBar
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:abb_indicatorColor="@color/colorApp"
        android:background="@color/mainBackground"
        app:abb_indicatorAppearance="round"
        app:abb_tabColor="@color/inputText"
        app:abb_textSize="16dp"
        app:abb_textStyle="bold"
        app:abb_tabColorSelected="@color/colorWhite"
        app:abb_indicatorHeight="4dp"
        app:abb_indicatorMargin="8dp"
        app:abb_selectedIndex="0"
        app:abb_selectedTabType="icon"
        app:abb_tabs="@menu/bottom_nav_view" />

</RelativeLayout>
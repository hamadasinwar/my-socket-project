<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/segoe_ui_regular</item>
    </style>

    <style name="ChatAirInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="fontFamily">@font/segoe_ui_regular</item>
        <item name="android:textColor">@color/inputText</item>
        <item name="android:textColorHint">@color/inputHint</item>
    </style>

    <style name="ChatAirInput.TextInput" parent="ChatAirInput">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRegular</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRegular</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRegular</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRegular</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
    </style>


    <style parent="@android:style/TextAppearance" name="TransparentText">

    <item name="android:textColor">#00000000</item>

</style>

    <style parent="ThemeOverlay.AppCompat.Dark.ActionBar" name="AppTheme.AppBarOverlay"/>

    <style parent="ThemeOverlay.AppCompat.Light" name="AppTheme.PopupOverlay"/>


    <style name="parent">

    <item name="android:layout_width">match_parent</item>

    <item name="android:layout_height">wrap_content</item>

</style>


    <style parent="parent" name="headerText">

    <item name="android:textSize">@dimen/headerTextSize</item>

    <item name="android:textColor">@color/textPrimaryLight</item>

    <item name="android:textStyle">bold</item>

</style>


    <style parent="TextAppearance.AppCompat.Medium.Inverse" name="textInputHintStyle">

    <item name="android:textColorHint">@color/textPrimaryLight</item>

    <item name="android:textColor">@color/textPrimaryLight</item>

    <item name="android:textSize">17sp</item>

    <item name="android:textStyle">bold</item>

</style>


    <style name="viewParent">

    <item name="android:layout_width">wrap_content</item>

    <item name="android:layout_height">wrap_content</item>

</style>


    <style parent="parent" name="profileDetailsLayout">

    <item name="android:layout_marginTop">20dp</item>

</style>


    <style name="profileDetailsImage">

    <item name="android:layout_width">40dp</item>

    <item name="android:layout_height">40dp</item>

    <item name="android:layout_alignParentTop">true</item>

    <item name="android:layout_alignParentLeft">true</item>

</style>


    <style parent="viewParent" name="profileDetailsTextMain">

    <item name="android:textColor">@color/textPrimaryLight</item>

    <item name="android:textStyle">bold</item>

    <item name="android:textSize">16sp</item>

    <item name="android:layout_marginLeft">10dp</item>

</style>


    <style parent="viewParent" name="profileDetailsMiniText">

    <item name="android:layout_alignParentBottom">true</item>

    <item name="android:textColor">@color/textPrimaryLight</item>

    <item name="android:textSize">14sp</item>

    <item name="android:layout_marginLeft">10dp</item>

</style>


    <style name="proifleDetailsView">

    <item name="android:layout_width">match_parent</item>

    <item name="android:layout_height">2dp</item>

    <item name="android:background">@color/profileAccentColor</item>

    <item name="android:layout_marginTop">5dp</item>

</style>

    <style name="profileStyledBackButton">

    <item name="android:layout_width">wrap_content</item>

    <item name="android:layout_height">wrap_content</item>

<!--
    <item name="android:background">@drawable/profile_back_button</item>
-->

    <item name="android:textAlignment">center</item>

    <item name="android:paddingLeft">30dp</item>

    <item name="android:paddingRight">50dp</item>

    <item name="android:paddingTop">10dp</item>

    <item name="android:paddingBottom">10dp</item>

<!--
    <item name="android:drawableLeft">@drawable/back_to_home_button</item>
-->

    <item name="android:textStyle">bold</item>

    <item name="android:layout_centerHorizontal">true</item>

    <item name="android:layout_alignParentTop">true</item>

    <item name="android:minWidth">250dp</item>

</style>
</resources>